              <configuration>
                <systemPropertyVariables>
                  <runType>saucelabsRemote</runType>
                  <appiumUrl>https://eu1.appium.testobject.com</appiumUrl>
                  <apiKey></apiKey>
                  <applicationId>3</applicationId>
                </systemPropertyVariables>

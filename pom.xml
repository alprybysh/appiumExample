    </profile>
    <profile>
      <id>browserstackRun</id>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-surefire-plugin</artifactId>
              <version>${maven-surefire-plugin.version}</version>
              <configuration>
                <systemPropertyVariables>
                  <runType>browserstackRemote</runType>
                  <appiumUrl>https://annaivanova8:rXpCVLxk8xiSs6E2zobK@hub-cloud.browserstack.com</appiumUrl>
                </systemPropertyVariables>
                <includes>
